@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h1>Animals groups at the Shelter</h1>

@if (@Model.Count == 0)
{
  <h3>No animal groups have been added yet!</h3>
} 
<ul>
  @foreach (Group group in Model)
  {
    <li>@Html.ActionLink($"{group.GroupOf}", "Details", new { id = group.GroupId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new animal group", "Create")</p>